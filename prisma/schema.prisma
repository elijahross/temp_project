generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Visitor {
  id        Int      @id @default(autoincrement())
  visitorId String
  visits    Int      @default(1)
  created   DateTime @default(now())
  View      View[]
}

model View {
  id        Int      @id @default(autoincrement())
  visit     Visitor? @relation(fields: [visitorId], references: [id])
  visitorId Int?
}
